{
    "name": "express-pg-typescript-app",
    "version": "1.0.0",
    "description": "Express PostgreSQL TypeScript Application",
    "main": "dist/app.js",
    "scripts": {
        "start": "node dist/app.js",
        "build": "tsc",
        "test": "jest",
        "fresh": "docker-compose down -v && docker-compose up --build -d && echo 'ðŸš€ Docker containers are running in the background!' && ts-node-dev --respawn --transpile-only --require tsconfig-paths/register src/app.ts",
        "dev": "docker-compose up -d && echo 'ðŸš€ Docker is running in the background!' && ts-node-dev --respawn --transpile-only --require tsconfig-paths/register src/app.ts",
        "docker:logs": "docker-compose logs -f --tail=50",
        "lint": "eslint . --ext .ts",
        "prepare": "husky install",
        "migrate:new": "ts-node scripts/create-migration.ts",
        "migrate-up:once": "npx knex migrate:up --env development",
        "migrate-up:all": "npx knex migrate:latest --env development",
        "migrate-down:once": "npx knex migrate:down --env development",
        "migrate-down:all": "npx knex migrate:rollback --all --env development",
        "migrate-up:dry-once": "npx knex migrate:up --env development --dry-run",
        "migrate-down:dry-once": "npx knex migrate:down --env development --dry-run"
    },
    "keywords": [
        "express",
        "typescript",
        "postgresql"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "bcrypt": "^5.1.1",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "jsonwebtoken": "^9.0.2",
        "knex": "^3.1.0",
        "lodash": "^4.17.21",
        "nodemailer": "^6.10.0",
        "otp-generator": "^4.0.1",
        "pg": "^8.14.1",
        "winston": "^3.11.0",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@eslint/js": "^9.23.0",
        "@types/bcrypt": "^5.0.2",
        "@types/cors": "^2.8.17",
        "@types/es6-promisify": "^6.0.4",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.11",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/knex": "^0.15.2",
        "@types/lodash": "^4.17.16",
        "@types/node": "^20.17.27",
        "@types/nodemailer": "^6.4.17",
        "@types/otp-generator": "^4.0.2",
        "@types/pg": "^8.11.11",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "eslint": "^8.57.1",
        "globals": "^16.0.0",
        "husky": "^8.0.3",
        "i": "^0.3.7",
        "jest": "^29.7.0",
        "npm": "^11.2.0",
        "prettier": "^3.5.3",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.29.0",
        "typescript-transform-paths": "^3.5.5"
    }
}
